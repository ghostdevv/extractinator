{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "lib": ["ESNext"],

        "strict": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noEmit": true
    },
    "include": ["src/**/*.ts"]
}